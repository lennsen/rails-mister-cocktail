<div class="home-container mt-5 ml-5">
<div class="container-left">
  <h1>HOLY<br>SPIRITS</h1>
    <%= link_to 'Add a Cocktail', new_cocktail_path, class: "btn btn-warning", :style=>'position: sticky; top: 19rem;' %>
</div>
<div class="container-right">
  <% @cocktails.each do |cocktail| %>
    <div class="card" style="width: 18rem;">
      <%= link_to image_tag(cocktail.image_url), cocktail, class: "card-img-top" %>
      <div class="card-body">
        <p class="card-text"><%= link_to cocktail.name, cocktail, style: "color:#383838" %></p>
      </div>
    </div>
  <% end %>
</div>

</div>
