<div class="show-container">
    <div>
      <img src="<%= @cocktail.image_url %>" alt="">
    </div>
    <div class="cocktail-details">
      <div class="btn">
        <%= link_to "Back to overview", cocktails_path, class: "btn btn-outline-secondary" %>
      </div>
      <h1><%= @cocktail.name.upcase %></h1>
      <h2>Subheader here</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
      <h2>Ingredients</h2>
      <div class="ingredient-container">
        <% @cocktail.doses.each do |dose| %>
        <div class="ingredients">
          <%= dose.ingredient.name %>
          <%= dose.description %>
          <%= link_to '✖️', dose_path(dose), method: :delete %>
        </div>
          <% end %>
      </div>
      <%= render '/doses/new', cocktail: @cocktail, dose: @dose %>
    </div>
</div>
